<h1>PROFESSORI CHE INSEGNANO: <%= @subject.name %></h1>

<div class="transition_link">
  <ul class="horizontal">
    <% @professors.each do |p| %>
      <li>
          <%= link_to p.surname+' '+p.name, professor_path(id: p, from_subject: @subject.id) %>
      </li>
    <% end %>
  </ul>
</div>

<div class = "back_link">
	<%= link_to "Indietro alla materia #{@subject.name}", subject_path(@subject) %>
</div>