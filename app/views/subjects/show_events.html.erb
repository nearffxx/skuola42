<h1>EVENTI CHE RIGUARDANO: <%= @subject.name %></h1>

<div class="transition_link">
  <ul>
    <% @events.each do |e| %>
      <li class="bullet">
          <%= link_to e.datetime.to_formatted_s(:short)+' '+e.name, event_path(id: e, from_events_subject: @subject.id) %>
      </li>
    <% end %>
  </ul>
</div>

<div class="transition_link">
  <%= link_to "Indietro alla materia #{@subject.name}", subject_path(@subject) %> </br>
</div>