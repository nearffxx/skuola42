<div class="group_link">
  <div>
    <ul class="horizontal">
      <li>
        <%= link_to yield(:group_name), activities_path %>
      </li>
    </ul>
  </div>
  <div>
    <ul class="horizontal">
      <li>
        <%= link_to "<<Prev", activity_path(@activities[@prev].id, from_guided_tour: true) if @prev_show %>
      </li>
      <li>
        <%= link_to "Next>>", activity_path(@activities[@next].id, from_guided_tour: true) if @next_show %>
      </li>
    </ul>
  </div>
</div>

<div class = "back_link">
	<%= link_to "Torna al professore #{@from_professor.surname+' '+@from_professor.name}", professor_path(@from_professor_id) if @from_professor_id %>  
</div>