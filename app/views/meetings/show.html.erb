<% provide(:title, 'INCONTRI') %>

<h1>INCONTRI CLASSE <%= @course.name %></h1>

<p class="short_line">Data, ora e aula: <%= @meeting.datetime.to_formatted_s(:short) + ' ' + @meeting.location %></p>

<div class="transition_link">
  <h4>Professori che partecipano</h4>
  <ul class="horizontal">
    <% @professors.each do |p| %>
      <li >
        <%= link_to p.name+' '+p.surname, professor_path(p, from_meeting: @meeting) %>
      </li>
    <% end %>
  </ul>
</div>

<div class="transition_link"> 
  <ul class="horizontal">
    <li>
      <%= link_to "Torna agli incontri di #{@from_professor.name+' '+@from_professor.surname}", show_meetings_professor_path(@from_professor_id) if @from_professor_id %>
    </li>
  </ul>
</div>

<div class="group_link">
  <ul class="horizontal">
    <li>
      <%= link_to 'Incontri per classe', meetings_path %>
    </li>
  </ul>
</div>